<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bc"
        android:layout_weight="1"
        android:padding="5dp"
        android:id="@+id/basket_list"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/tx"
            android:layout_gravity="top"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:textColor="@color/tx"
            android:textAlignment="center"
            android:id="@+id/price_TV"
            android:padding="10dp"
            android:textSize="24dp"
            android:text="Сумма заказа"
            tools:ignore="RtlCompat" />
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:padding="10dp"
            android:backgroundTint="@color/tx"
            android:text="@string/getOrder"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:cornerRadius="30dp"
            android:id="@+id/getOrder_Btn"/>
    </LinearLayout>

</LinearLayout>